    "$PRsClosedByMonth"
else
  if [ "$PRsClosed" -ge 1000 ]; then
    echo "    Latest 1000 PRs"
    echo "    merged/closed"
  fi
  echo "â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¬â”€â”€â”€â”€â”€â”€â”€â”€â”€â”"
  echo "â”‚  Month   â”‚  PRs    â”‚"
  echo "â”‚  merged/ â”‚ merged/ â”‚"
  echo "â”‚  closed  â”‚ closed  â”‚"
  echo "â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤"
  while IFS= read -r line; do
    echo -n "â”‚  "
    echo -n "$(echo "$line" | cut -d ' ' -f1)"
    echo -n " â”‚ "
    echo -n "$(printf "%7s" "$(echo "$line" | cut -d ' ' -f2)")"
    echo " â”‚"
  done <<< "$PRsClosedByMonth"
  echo "â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”´â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜"

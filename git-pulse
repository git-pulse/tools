if [[ $avgIssuesDelta -lt 0 ]]; then
  increaseOrDecrease="decrease"
fi
cat << EOF >> "$htmlFile"
      <li>$avgIssuesDelta issue $increaseOrDecrease in open issues per
          month on average.
    </ul>
EOF
fi


fi

increaseOrDecrease="increase"
[[ $netPRsOpened -lt 0 ]] && increaseOrDecrease="decrease"
increaseOrDecrease="increase"
if [[ $netPRsOpened -lt 0 ]]; then
  increaseOrDecrease="decrease"
